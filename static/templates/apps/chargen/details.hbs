<form>
    <div class="stage-title">
        <p class="subtitle">{{localize "CHARGEN.StageTitle.Details"}}</p>
    </div>


    <div class="chargen-content">
        <div class="form-group">
            <label>{{localize "Gender"}}</label>
            <input name="gender" type="text">
        </div>
        <div class="form-group">
            <label>{{localize "Name"}} <a class="roll-details" data-type="rollName"><i class="fa-solid fa-dice"></i></a></label>
            <input name="name" type="text" value="{{data.system.details.name}}">
        </div>
        <div class="form-group">
            <label>{{localize "Age"}} <a class="roll-details" data-type="rollAge"><i class="fa-solid fa-dice"></i></a></label>
            <input name="age" type="text" value="{{data.system.details.age}}">
        </div>
        <div class="form-group">
            <label>{{localize "Height"}} <a class="roll-details" data-type="rollHeight"><i class="fa-solid fa-dice"></i></a></label>
            <input name="height" type="text" value="{{data.system.details.height}}">
        </div>
        <div class="form-group">
            <label>{{localize "Eye Colour"}} <a class="roll-details" data-type="rollEyes"><i class="fa-solid fa-dice"></i></a></label>
            <input name="eyes" type="text" value="{{data.system.details.eyes}}">
        </div>
        <div class="form-group">
            <label>{{localize "Hair Colour"}} <a class="roll-details" data-type="rollHair"><i class="fa-solid fa-dice"></i></a></label>
            <input name="hair" type="text" value="{{data.system.details.hair}}">
        </div>
        <div class="goals">
            <div class="form-group">
                <label>{{localize "IMPMAL.ShortTermGoal"}}</label>
                <textarea name="short">{{data.system.goal.short}}</textarea>
            </div>
            <div class="form-group">
                <label>{{localize "IMPMAL.LongTermGoal"}}</label>
                <textarea name="long" >{{data.system.goal.long}}</textarea>
            </div>
        </div>
        <div class="connections">
            <label>{{localize "IMPMAL.Connections"}} <a class="roll-details" data-type="rollConnections"><i class="fa-solid fa-dice"></i></a></label>
            <div class="connection-list">
            {{#each data.system.connections}}
            <input type="text" value={{this}}>
            {{/each}}

            </div>
        </div>
    </div>
    <div class="controls">
        <button type="submit">{{localize "Submit"}}</button>
    </div>
</form>