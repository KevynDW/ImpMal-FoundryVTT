<form>
  <div class="stage-title">
    <p>{{localize "CHARGEN.StageTitle.Role"}}</p>
  </div>


  <div class="chargen-content">

    <div class="chargen-items">
      {{#if context.role}}
      <div class="flexcol">
        <h4>{{context.role.name}}</h4>
        <img src="{{context.role.img}}">
        {{{roleDescription}}}
      </div>
      {{/if}}
    </div>

  </div>

    <div class="result">
      <span><b>{{localize "CHARGEN.StageRoles"}}</b>: {{context.role.name}}</span>
      <input class="xp">{{localize "XP"}}: {{context.exp}}</input>
    </div>
    <div class="controls">
      <button type="submit">{{localize "Submit"}}</button>
    </div>
</form>